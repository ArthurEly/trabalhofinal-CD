`timescale 1 ps/ 1 ps
module decoddisplay_vlg_sample_tst(
	A,
	B,
	C,
	D,
	sampler_tx
);
input  A;
input  B;
input  C;
input  D;
output sampler_tx;

reg sample;
time current_time;
always @(A or B or C or D)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

module decoddisplay_vlg_check_tst (
	OUT,
	sampler_rx
);
input [6:0] OUT;
input sampler_rx;

reg [6:0] OUT_expected;

reg [6:0] OUT_prev;

reg [6:0] OUT_expected_prev;

reg [6:0] last_OUT_exp;

reg trigger;

